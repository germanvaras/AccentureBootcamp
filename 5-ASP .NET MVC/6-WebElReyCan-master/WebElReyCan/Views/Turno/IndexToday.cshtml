
@model IEnumerable<WebElReyCan.Models.Turno>
@{
    ViewBag.Title = "IndexToday";
}

<h2>Turnos de Hoy</h2>

<p>@Html.ActionLink("Agregar Turno", "Create", "Turno")</p>
<p>@Html.ActionLink("Lista de Turnos", "Index", "Turno")</p>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMascota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreDueño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreMascota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDueño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>@Html.ActionLink("Editar", "Edit", new { id = item.TurnoId })</td>
                <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.TurnoId }) </td>
            </tr>
        }
    </tbody>
</table>

